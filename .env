docker run -d \
  --name kafka \
  -p 2181:2181 \
  -p 9092:9092 \
  -e KAFKA_LISTENERS="INTERNAL://:29092,EXTERNAL://:9092" \
  -e KAFKA_ADVERTISED_LISTENERS="INTERNAL://kafka:29092,EXTERNAL://localhost:9092" \
