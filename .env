  -e KAFKA_RESTART_ATTEMPTS="10" \
  -e KAFKA_RESTART_DELAY="5" \
  -e ZOOKEEPER_AUTOPURGE_PURGE_INTERVAL="0" \
  --restart no \
  obsidiandynamics/kafka


